<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/flowers</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <!--<property name="hibernate.hbm2dll.auto">create</property>-->
        <!--<property name="hibernate.hbm2ddl.auto">update</property>-->
        <!--<property name="hibernate.show_sql">true</property>-->
        <!--<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>-->
        <mapping class="bsu.model.hibernate.Flower" />
        <mapping class="bsu.model.hibernate.Order" />
        <mapping class="bsu.model.hibernate.User" />
        <mapping class="bsu.model.hibernate.OrderElement" />
        <mapping class="bsu.model.hibernate.Rules" />
    </session-factory>
</hibernate-configuration>
